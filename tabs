    <title>Tabbed js</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body, html {
            height: 100%;
            margin: 0;
        }
        
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
       }
       
       .tab {
           padding: 20px;
           border: 4px solid white;
           box-shadow: 2px 4px 4px 2px rgba(0,0,0,0.3);
           border-radius: 16px;
       }
       
       .tablink {
           cursor: pointer;
           padding: 12px 16px;
       }
       
       button {
           padding: 10px;
           outline: none;
           border: none;
           color: #191404;
           font-family: georgia;
           font-weight: 600;
           font-size: 18px;
           border-radius: 6px;
           box-shadow: 8px 6px 5px 2px rgba(0,0,0,0.1) inset;
           scale: 0.9;
           background: white;
           margin-left: 10px;
           transition: all 0.8s;
           cursor: pointer;
       }
       
       button:hover {
           box-shadow: 2px 4px 5px 2px rgba(0,0,0,0.1);
           scale: 1.0;
       }
       
       .tabcontent {
           display: none;
           padding: 100px 100px;
           background: white;
           box-shadow: 4px 2px 4px 6px rgba(0,0,0,0.025);
           margin-top: 16px;
           height: 100%;
           border-radius: 14px;
